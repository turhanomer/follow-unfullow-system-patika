{
  "name": "stacks-follow-system",
  "version": "1.0.0",
  "description": "A decentralized social media follow/unfollow system built on the Stacks blockchain",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:testnet": "ts-node scripts/deploy-testnet.ts",
    "deploy:mainnet": "ts-node scripts/deploy-mainnet.ts",
    "deploy:simple": "ts-node scripts/deploy-simple.ts",
    "initialize": "ts-node scripts/initialize-contracts.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "stacks",
    "blockchain",
    "clarity",
    "smart-contracts",
    "social-media",
    "follow-system"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@stacks/transactions": "^6.0.0",
    "@stacks/network": "^6.0.0",
    "@stacks/auth": "^6.0.0",
    "@stacks/wallet-sdk": "^6.0.0",
    "@stacks/clarity": "^6.0.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.9.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "contracts/**/*.clar",
      "scripts/**/*.ts"
    ]
  }
} 